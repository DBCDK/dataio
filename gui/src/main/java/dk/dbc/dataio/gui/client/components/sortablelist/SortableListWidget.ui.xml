
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .sortablelist {
            cursor: default;
        }
        .sortableListContainer {
            /* This container allows 1 pixel extra space at the bottom, which makes it possible to move an item to the bottom */
            padding-bottom: 1px;
            padding-top: 1px; /* Make the top also have one extra pixel for the symmetry */
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="{style.sortableListContainer}">
            <g:FlowPanel ui:field="list" addStyleNames="{style.sortablelist} dio-SortableList"/>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>
