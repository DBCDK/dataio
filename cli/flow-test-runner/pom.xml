<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>dk.dbc</groupId>
        <artifactId>dataio-cli</artifactId>
        <version>2.0-SNAPSHOT</version>
    </parent>

    <artifactId>flow-test-runner</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <main-class>dk.dbc.dataio.cli.FlowTestRunner</main-class>
        <jdk.target.version>17</jdk.target.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>dk.dbc</groupId>
            <artifactId>dataio-job-processor2</artifactId>
            <version>2.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>dk.dbc</groupId>
            <artifactId>dataio-sink-diff</artifactId>
            <version>2.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>info.picocli</groupId>
            <artifactId>picocli</artifactId>
        </dependency>
    </dependencies>

    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>remove-logback-xml</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>zip</executable>
                            <arguments>
                                <argument>-d</argument>
                                <argument>${build.directory}/flow-test-runner.jar</argument>
                                <argument>logback.xml</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>remove-logback-test-xml</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>zip</executable>
                            <arguments>
                                <argument>-d</argument>
                                <argument>${build.directory}/flow-test-runner.jar</argument>
                                <argument>logback-test.xml</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>remove-logback-jobstore-xml</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>zip</executable>
                            <arguments>
                                <argument>-d</argument>
                                <argument>${build.directory}/flow-test-runner.jar</argument>
                                <argument>logback-jobstore.xml</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <environmentVariables>
                        <USE_NATIVE_DIFF>false</USE_NATIVE_DIFF>
                    </environmentVariables>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
