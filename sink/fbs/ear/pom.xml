<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>dataio-sink-fbs</artifactId>
    <groupId>dk.dbc</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <artifactId>dataio-sink-fbs-ear</artifactId>
  <name>dataio-sink-fbs-ear</name>
  <packaging>ear</packaging>

  <properties>
    <logback.staging.directory>${project.build.directory}/logback</logback.staging.directory>
    <logback.jndi.resource>${jndi.url.sink.fbs.logback}</logback.jndi.resource>
  </properties>

  <build>
    <resources>
      <resource>
        <directory>${logback.staging.directory}</directory>
        <filtering>true</filtering>
      </resource>
    </resources>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <version>2.8</version>
        <configuration>
          <version>6</version>
          <defaultLibBundleDir>lib</defaultLibBundleDir>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>truezip-maven-plugin</artifactId>
        <version>${truezip-maven-plugin.version}</version>
        <executions>
          <execution>
            <id>extract</id>
            <goals>
              <goal>copy</goal>
            </goals>
            <phase>generate-resources</phase>
            <configuration>
              <fileset>
                <directory>${basedir}/../../../commons/utils/logback/target/dataio-commons-utils-logback-${project.version}.jar</directory>
                <outputDirectory>${logback.staging.directory}</outputDirectory>
              </fileset>
            </configuration>
          </execution>
          <execution>
            <id>replace</id>
            <goals>
              <goal>copy</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <files>
                <file>
                  <source>${project.build.directory}/classes/logback.xml</source>
                  <outputDirectory>${project.build.directory}/dataio-sink-fbs-ear-${project.version}.ear/lib/dataio-commons-utils-logback-${project.version}.jar</outputDirectory>
                </file>
              </files>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>dk.dbc</groupId>
      <artifactId>dataio-sink-fbs-ejb</artifactId>
      <version>${project.version}</version>
      <type>ejb</type>
    </dependency>
    <dependency>
      <groupId>dk.dbc</groupId>
      <artifactId>dataio-commons-utils-logback</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
</project>