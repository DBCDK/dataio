<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="img" type="dk.dbc.dataio.gui.client.resources.Resources"/>
    <ui:with type="dk.dbc.dataio.gui.client.components.jobfilter.Texts" field="txt"/>

    <g:HTMLPanel>

        <span>
            <g:RadioButton ui:field="showAllSubmittersButton" name="submitterShowButton" value="false" enabled="true" text="{txt.suppressSubmitterFilter_ShowAllSubmitterJobs}" />
            <g:RadioButton ui:field="suppressSubmittersButton" name="submitterShowButton" value="true" enabled="true" text="{txt.suppressSubmitterFilter_SuppressSubmitterJobs}" />
        </span>

    </g:HTMLPanel>
</ui:UiBinder>