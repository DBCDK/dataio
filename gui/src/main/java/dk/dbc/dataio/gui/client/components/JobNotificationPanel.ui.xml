<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:comp='urn:import:dk.dbc.dataio.gui.client.components'>

    <ui:with type="dk.dbc.dataio.gui.client.pages.item.show.Texts" field="txt"/>

    <ui:style>
        .container {
            margin-bottom: 1em;
            padding: 0.5em;
            background-color: lightgray;
        }
        .notificationContent {
            background-color: whitesmoke;
            padding: 0.25em;
            margin: 0;
            white-space: pre;
            font-family: monospace;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="{style.container}">

        <li><comp:PromptedLabel ui:field="jobId" guiId="jobNotificationJobId" prompt="{txt.promptJobNotification_JobId}" /></li>
        <li><comp:PromptedLabel ui:field="destination" guiId="jobNotificationDestination" prompt="{txt.promptJobNotification_Destination}" /></li>
        <li><comp:PromptedLabel ui:field="timeOfCreation" guiId="jobNotificationTimeOfCreation" prompt="{txt.promptJobNotification_JobCreationTime}" /></li>
        <li><comp:PromptedLabel ui:field="timeOfLastModification" guiId="jobNotificationTimeOfLastModification" prompt="{txt.promptJobNotification_JobCompletionTime}" /></li>
        <li><comp:PromptedLabel ui:field="type" guiId="jobNotificationType" prompt="{txt.promptJobNotification_Type}" /></li>
        <li><comp:PromptedLabel ui:field="status" guiId="jobNotificationStatus" prompt="{txt.promptJobNotification_Status}" /></li>
        <li><comp:PromptedLabel ui:field="statusMessage" guiId="jobNotificationStatusMessage" prompt="{txt.promptJobNotification_StatusMessage}" /></li>
        <div class="{style.notificationContent}"><g:InlineHTML ui:field="content"/></div>

    </g:HTMLPanel>
</ui:UiBinder>