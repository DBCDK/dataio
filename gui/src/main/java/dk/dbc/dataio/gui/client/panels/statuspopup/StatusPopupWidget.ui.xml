<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with type="dk.dbc.dataio.gui.client.resources.Resources" field="res"/>
    <ui:with type="dk.dbc.dataio.gui.client.panels.statuspopup.Texts" field="txt"/>

    <g:HTMLPanel>
        <g:Grid styleName="{res.css.statusPopup}">
            <!-- Header row -->
            <g:row>
                <g:customCell>
                    <g:Anchor ui:field="totalFailed" text="{txt.label_TotalCount}" href="javascript:"/>  <!-- The empty href tag is necessary in order to assure correct cursor when hovering the anchor - this should be fixed in newer versions of GWT -->
                </g:customCell>
                <g:customCell>
                    <g:Label text="{txt.header_Success}"/>
                </g:customCell>
                <g:customCell>
                    <g:Label text="{txt.header_Failed}"/>
                </g:customCell>
                <g:customCell>
                    <g:Label text="{txt.header_Ignored}"/>
                </g:customCell>
            </g:row>

            <!-- Chunkifying row -->
            <g:row>
                <g:customCell>
                    <g:Label text="{txt.header_Chunkifying}"/>
                </g:customCell>
                <g:customCell>
                    <g:Anchor ui:field="chunkifyingSuccess" href="javascript:"/>
                </g:customCell>
                <g:customCell>
                    <g:Anchor ui:field="chunkifyingFailed" href="javascript:"/>
                </g:customCell>
                <g:customCell>
                    <g:Anchor ui:field="chunkifyingIgnored" href="javascript:"/>
                </g:customCell>
            </g:row>

            <!-- Processing row -->
            <g:row>
                <g:customCell>
                    <g:Label text="{txt.header_Processing}"/>
                </g:customCell>
                <g:customCell>
                    <g:Anchor ui:field="processingSuccess" href="javascript:"/>
                </g:customCell>
                <g:customCell>
                    <g:Anchor ui:field="processingFailed" href="javascript:"/>
                </g:customCell>
                <g:customCell>
                    <g:Anchor ui:field="processingIgnored" href="javascript:"/>
                </g:customCell>
            </g:row>

            <!-- Delivering row -->
            <g:row>
                <g:customCell>
                    <g:Label text="{txt.header_Delivering}"/>
                </g:customCell>
                <g:customCell>
                    <g:Anchor ui:field="deliveringSuccess" href="javascript:"/>
                </g:customCell>
                <g:customCell>
                    <g:Anchor ui:field="deliveringFailed" href="javascript:"/>
                </g:customCell>
                <g:customCell>
                    <g:Anchor ui:field="deliveringIgnored" href="javascript:"/>
                </g:customCell>
            </g:row>
        </g:Grid>
        <g:Anchor ui:field="moreInfo" text="{txt.link_MoreInfo}" href="javascript:"/>
    </g:HTMLPanel>

</ui:UiBinder>