<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dio='urn:import:dk.dbc.dataio.gui.client.components'>
    <ui:with type="dk.dbc.dataio.gui.client.pages.flowbinder.modify.Texts" field="txt"/>

    <g:HTMLPanel>

        <li><dio:PromptedTextBox ui:field="name" guiId="flowbindermodifynamepanel" prompt="{txt.label_FlowBinderName}" maxLength="160" toolTip=""/></li>
        <li><dio:PromptedTextArea ui:field="description" guiId="flowbindermodifydescriptionpanel" prompt="{txt.label_FlowBinderDescription}" maxLength="160"/></li>
        <li><dio:PromptedTextBox ui:field="frame" guiId="flowbindermodifyframepanel" prompt="{txt.label_FrameFormat}" maxLength="" toolTip="{txt.tooltip_FrameFormat}"/></li>
        <li><dio:PromptedTextBox ui:field="format" guiId="flowbindermodifyformatpanel" prompt="{txt.label_ContentFormat}" maxLength="" toolTip="{txt.tooltip_ContentFormat}"/></li>
        <li><dio:PromptedTextBox ui:field="charset" guiId="flowbindermodifycharsetpanel" prompt="{txt.label_CharacterSet}" maxLength="" toolTip="{txt.tooltip_CharacterSet}"/></li>
        <li><dio:PromptedTextBox ui:field="destination" guiId="flowbindermodifydestinationpanel" prompt="{txt.label_Destination}" maxLength="" toolTip=""/></li>
        <li><dio:PromptedList ui:field="recordSplitter" guiId="flowbindermodifyrecordsplitterpanel" prompt="{txt.label_RecordSplitter}" multiSelect="false" visibleItems="1"/></li>
        <li><dio:PromptedMultiList ui:field="submitters" guiId="flowbindermodifysubmitterspanel" prompt="{txt.label_Submitters}" manualSorting="false" /></li>
        <li><dio:PromptedList ui:field="flow" guiId="flowbindermodifyflowpanel" prompt="{txt.label_Flow}" multiSelect="false" visibleItems="1"/></li>
        <li><dio:PromptedList ui:field="sink" guiId="flowbindermodifysinkpanel" prompt="{txt.label_Sink}" multiSelect="false" visibleItems="1"/></li>
        <g:HTMLPanel ui:field="updateSinkSection" visible="false">
            <li><dio:PromptedList ui:field="queueProvider" guiId="flowbindermodifyqueueproviderpanel" prompt="{txt.label_QueueProvider}" multiSelect="false" visibleItems="1"/></li>
        </g:HTMLPanel>
        <li>
            <g:Button ui:field="saveButton"><ui:text from="{txt.button_Save}"/></g:Button>
            <g:Button ui:field="deleteButton" visible="false" addStyleNames="deleteButton"><ui:text from="{txt.button_Delete}"/></g:Button>
        </li>
        <li><g:Label ui:field="status"/></li>

        <dio:PopupListBox ui:field="popupListBox" guid="dio-QueueProviderDialogBox" dialogTitle="{txt.caption_SelectSubmitter}" multipleSelect="true" okButtonText="{txt.button_Select}" cancelButtonText="{txt.button_Cancel}"/>
        <dio:PopupBox ui:field="confirmation" okButtonText="{txt.button_Yes}" cancelButtonText="{txt.button_Cancel}" dialogTitle="{txt.caption_DeleteFlowbinder}" />

    </g:HTMLPanel>

</ui:UiBinder>