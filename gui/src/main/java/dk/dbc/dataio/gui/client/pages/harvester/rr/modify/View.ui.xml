<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dio='urn:import:dk.dbc.dataio.gui.client.components'>

    <ui:with type="dk.dbc.dataio.gui.client.pages.harvester.rr.modify.Texts" field="txt"/>

    <g:HTMLPanel>

        <li><dio:PromptedTextBox ui:field="name" guiId="harvesternamepanel" prompt="{txt.prompt_Name}"/></li>
        <li><dio:PromptedTextBox ui:field="resource" guiId="harvesterresourcepanel" prompt="{txt.prompt_Resource}"/></li>
        <li><dio:PromptedTextBox ui:field="targetUrl" guiId="harvestertargeturlpanel" prompt="{txt.prompt_TargetUrl}"/></li>
        <li><dio:PromptedTextBox ui:field="targetGroup" guiId="harvestertargetgrouppanel" prompt="{txt.prompt_TargetGroup}"/></li>
        <li><dio:PromptedTextBox ui:field="targetUser" guiId="harvestertargetuserpanel" prompt="{txt.prompt_TargetUser}"/></li>
        <li><dio:PromptedPasswordTextBox ui:field="targetPassword" guiId="harvestertargetpasswordpanel" prompt="{txt.prompt_TargetPassword}"/></li>
        <li><dio:PromptedTextBox ui:field="consumerId" guiId="harvesterconsumeridpanel" prompt="{txt.prompt_Id}"/></li>
        <li><dio:PromptedTextBox ui:field="size" guiId="harvestersizepanel" prompt="{txt.prompt_Size}"/></li>
        <li><dio:PromptedMultiList ui:field="formatOverrides" guiId="harvesterformatoverridespanel" prompt="{txt.prompt_FormatOverrides}" manualSorting="false"/></li>
        <li><dio:PromptedCheckBox ui:field="relations" guiId="harvesterrelationspanel" prompt="{txt.prompt_Relations}"/></li>
        <li><dio:PromptedTextBox ui:field="destination" guiId="harvesterdestinationpanel" prompt="{txt.prompt_Destination}"/></li>
        <li><dio:PromptedTextBox ui:field="format" guiId="harvesterformatpanel" prompt="{txt.prompt_Format}"/></li>
        <li><dio:PromptedTextBox ui:field="type" guiId="harvestertypepanel" prompt="{txt.prompt_Type}"/></li>
        <li><dio:PromptedCheckBox ui:field="enabled" guiId="harvesterenabledpanel" prompt="{txt.prompt_Enabled}"/></li>

        <li>
            <g:Button ui:field="saveButton"><ui:text from="{txt.button_Save}"/></g:Button>
            <g:Button ui:field="updateButton" visible="false"><ui:text from="{txt.button_Update}"/></g:Button>
        </li>

        <li><g:Label ui:field="status"></g:Label></li>

        <dio:PopupMapEntry ui:field="popupFormatOverrideEntry" keyPrompt="{txt.prompt_OverrideSubmitter}" valuePrompt="{txt.prompt_OverrideFormat}" dialogTitle="{txt.label_EnterFormatOverride}" okButtonText="{txt.button_Ok}" cancelButtonText="{txt.button_Cancel}" />

    </g:HTMLPanel>

</ui:UiBinder>