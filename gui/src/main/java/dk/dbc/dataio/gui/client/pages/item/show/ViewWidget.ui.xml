<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dio='urn:import:dk.dbc.dataio.gui.client.pages.item.show'>
    <ui:with type="dk.dbc.dataio.gui.client.pages.item.show.Texts" field="txt"/>

    <ui:style>
        .header {
            font-size: 20px;
            margin-bottom: 0.5em;
        }
        .tab-content {
        }
    </ui:style>

    <g:HTMLPanel styleName="items-show-table">

        <g:Label ui:field="jobHeader" addStyleNames="{style.header}" />

        <g:DecoratedTabPanel ui:field="tabPanel" animationEnabled="false" width="100%" addStyleNames="{style.tab-content}">
            <g:Tab text="{txt.tab_AllItems}">
                <g:HTMLPanel>
                    <dio:ItemsListView ui:field="allItemsList"/>
                </g:HTMLPanel>
            </g:Tab>
            <g:Tab text="{txt.tab_FailedItems}">
                <g:HTMLPanel>
                    <dio:ItemsListView ui:field="failedItemsList"/>
                </g:HTMLPanel>
            </g:Tab>
            <g:Tab text="{txt.tab_IgnoredItems}">
                <dio:ItemsListView ui:field="ignoredItemsList"/>
            </g:Tab>
            <g:Tab text="{txt.tab_JobInfo}">
                <dio:JobInfoTabContent ui:field="jobInfoTabContent"/>
            </g:Tab>
        </g:DecoratedTabPanel>
    </g:HTMLPanel>

</ui:UiBinder>
