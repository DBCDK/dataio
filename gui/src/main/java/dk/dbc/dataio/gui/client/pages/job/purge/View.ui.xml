
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:prompted="urn:import:dk.dbc.dataio.gui.client.components.prompted">

    <ui:with type="dk.dbc.dataio.gui.client.pages.job.purge.Texts" field="txt"/>

    <ui:style>
        .header {
            font-size: 20px;
            margin-bottom: 0.5em;
        }
    </ui:style>

    <g:HTMLPanel>

        <g:Label ui:field="header" addStyleNames="{style.header}" text="{txt.header_JobPurge}"/>
        <g:HTML ui:field="text"/>

    </g:HTMLPanel>

</ui:UiBinder>
