
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dio='urn:import:dk.dbc.dataio.gui.client.components'
             xmlns:prompted="urn:import:dk.dbc.dataio.gui.client.components.prompted">
    <ui:with type="dk.dbc.dataio.gui.client.pages.basemaintenance.Texts" field="txt"/>

    <ui:style>
        .boxStyle {
            float: left;
            padding-top: 0.4em;
        }
    </ui:style>

    <g:HTMLPanel>

        <prompted:PromptedTextBox ui:field="trackingIdSearch" guiId="searchtrackingidbox" prompt="{txt.prompt_TrackingIdSearch}" styleName="{style.boxStyle}" />
        <g:Button ui:field="trackingIdSearchButton" text="{txt.button_TrackingIdSearch}" />

    </g:HTMLPanel>

</ui:UiBinder>
