

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:io='urn:import:dk.dbc.dataio.gui.client.pages.harvester.infomedia.show'>
    <ui:with type="dk.dbc.dataio.gui.client.pages.harvester.infomedia.show.Texts" field="txt"/>

    <ui:style>
        .harvestersTable thead th {
            padding: 3px;
        }
        .harvestersTable tbody td {
            padding: 3px;
        }
    </ui:style>

    <g:HTMLPanel>

        <g:Button ui:field="newInfomediaHarvesterButton"><ui:text from="{txt.button_NewInfomediaHarvesterButton}" /></g:Button>

        <table cellspacing='0' cellpadding='0' style='width:100%;'>
            <tr>
                <td id="infomedia-harvesters-show-table" valign='top'>
                    <io:HarvestersTable pageSize='500' ui:field='harvestersTable' addStyleNames="{style.harvestersTable}"/>
                </td>
            </tr>
        </table>

    </g:HTMLPanel>

</ui:UiBinder>
