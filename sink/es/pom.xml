      <artifactId>ojdbc6</artifactId>
      <version>11.2.0.2.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>dk.dbc</groupId>
      <artifactId>dataio-job-store-service-test</artifactId>
