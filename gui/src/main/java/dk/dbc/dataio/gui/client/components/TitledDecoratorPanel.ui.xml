<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with type="dk.dbc.dataio.gui.client.components.jobsfilter.Texts" field="txt"/>
    <ui:style>
        @external .middleCenter;
        .decoratorPanel {
            margin-top: 1em;
        }
        .headerText {
            margin-top: -1em;
            width: 100%;
        }
        .headerText div {
            padding: 0 0.3em;
            margin: 0 0 0 0.3em;
            background-color: #F9F9F7;
            display: inline;
            font-weight: bold;
        }
        .decoratorPanel .middleCenter {
            width: 100%;
        }
        .contentPanel {
            min-height: 1em;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:DecoratorPanel title="{txt.text_Filter}" addStyleNames="{style.decoratorPanel}">
            <g:DockPanel>
                <g:Dock direction="NORTH">
                    <g:SimplePanel addStyleNames="{style.headerText}">
                        <g:Label ui:field="title" text="{txt.text_Filter}"/>
                    </g:SimplePanel>
                </g:Dock>
                <g:Dock direction="NORTH">
                    <g:SimplePanel ui:field="contentPanel" addStyleNames="{style.contentPanel}"/>
                </g:Dock>
            </g:DockPanel>
        </g:DecoratorPanel>
    </g:HTMLPanel>
</ui:UiBinder>