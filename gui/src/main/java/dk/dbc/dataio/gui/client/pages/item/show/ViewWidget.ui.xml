<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">
    <ui:with type="dk.dbc.dataio.gui.client.pages.item.show.Texts" field="txt"/>

    <ui:style>
        .header {
            font-size: 20px;
        }
    </ui:style>

    <g:HTMLPanel styleName="items-show-table">

        <g:Label ui:field="jobHeader" addStyleNames="{style.header}" />
        <c:CellTable pageSize='500' ui:field='itemsTable' />
        <c:SimplePager ui:field="pager" />
        <g:Button ui:field="backButton" text="{txt.label_Back}" />

    </g:HTMLPanel>

</ui:UiBinder>
