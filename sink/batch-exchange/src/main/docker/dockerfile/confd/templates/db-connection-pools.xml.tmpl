<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Resource Definitions//EN" "http://glassfish.org/dtds/glassfish-resources_1_5.dtd">
<resources>


  <jdbc-connection-pool validate-atmost-once-period-in-seconds="10" datasource-classname="org.postgresql.ds.PGSimpleDataSource"
                        name="jdbc/batch-exchange/pool" res-type="javax.sql.DataSource" is-connection-validation-required="true"
                        connection-validation-method="meta-data">
      <property name="user" value="{{getv "/dbc/postgres/batchexchange/env/postgres/user"}}"></property>
      <property name="PortNumber" value="5432"></property>
      <property name="password" value="{{getv "/dbc/postgres/batchexchange/env/postgres/password"}}"></property>
      <property name="DriverClass" value="org.postgresql.Driver"></property>
      <property name="DatabaseName" value="{{getv "/dbc/postgres/batchexchange/env/postgres/db"}}"></property>
      <property name="serverName" value="{{getv "/dbc/postgres/batchexchange/env/postgres/servername"}}"></property>
  </jdbc-connection-pool>

    <jdbc-resource pool-name="jdbc/batch-exchange/pool" jndi-name="jdbc/batch-exchange"></jdbc-resource>

</resources>
