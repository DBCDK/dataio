<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with type="dk.dbc.dataio.gui.client.components.jobfilter.Texts" field="txt"/>
    <ui:style>
        .menuBar {
            display: inline-block;
            vertical-align: middle;
        }
        .jobFilterList {
        }
    </ui:style>
    <g:HTMLPanel>

        <g:FlowPanel ui:field="jobFilterPanel" addStyleNames="{style.jobFilterList}"/>

        <g:MenuBar addStyleNames="{style.menuBar}">
            <g:MenuItem>
                <ui:text from="{txt.text_AddFilter}" />
                <g:MenuBar ui:field="filterMenu" vertical="true" />
            </g:MenuItem>
        </g:MenuBar>

        <g:Button ui:field="filterButton"><ui:text from="{txt.button_Filter}"/></g:Button>

    </g:HTMLPanel>
</ui:UiBinder>