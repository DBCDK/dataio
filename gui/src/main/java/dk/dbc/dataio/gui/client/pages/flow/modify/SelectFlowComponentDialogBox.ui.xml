<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with type="dk.dbc.dataio.gui.client.pages.flow.modify.Texts" field="txt"/>

    <ui:style>
        .listbox {
            width: 100%;
        }
    </ui:style>

    <g:HTMLPanel>

        <g:DialogBox ui:field="availableFlowComponentsDialog" text="{txt.caption_SelectFlowComponent}" title="{txt.caption_SelectFlowComponent}" modal="false" >
            <g:FlowPanel>
                <g:ListBox ui:field="flowComponentsList" visibleItemCount="4" addStyleNames="{style.listbox}" />
                <g:Button ui:field="selectFlowComponentButton" text="{txt.button_Select}"/>
                <g:Button ui:field="cancelButton" text="{txt.button_Cancel}"/>
            </g:FlowPanel>
        </g:DialogBox>

    </g:HTMLPanel>
</ui:UiBinder>