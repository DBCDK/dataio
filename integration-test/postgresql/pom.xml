<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!--
  Start postgresql server from the command line with:

    %> mvn -Pit pre-integration-test

  Stop postgresql server from the command line with:

    %> mvn -Pit dk.dbc:postgresql-maven-plugin::shutdown
  -->

  <parent>
    <artifactId>dataio-integration-test</artifactId>
    <groupId>dk.dbc</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <artifactId>dataio-integration-test-postgresql</artifactId>
  <name>dataio-integration-test-postgresql</name>
  <packaging>pom</packaging>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <version>2.5</version>
        <configuration>
          <excludeDefaultDirectories>true</excludeDefaultDirectories>
          <filesets>
            <fileset>
              <directory>${project.build.directory}</directory>
              <excludes>
                <exclude>postgresql-cluster/**</exclude>
              </excludes>
            </fileset>
          </filesets>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>it</id>
      <build>
        <plugins>
          <plugin>
            <groupId>dk.dbc</groupId>
            <artifactId>postgresql-maven-plugin</artifactId>
            <version>${postgresql-maven-plugin.version}</version>
            <configuration>
              <pgPort>${postgresql.port}</pgPort>
            </configuration>
            <executions>
              <execution>
                <id>jobstore</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>start</goal>
                </goals>
                <configuration>
                  <pgDbName>jobstore</pgDbName>
                </configuration>
              </execution>
              <execution>
                <id>logstore</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>start</goal>
                </goals>
                <configuration>
                  <pgDbName>logstore</pgDbName>
                </configuration>
              </execution>
              <execution>
                <id>flowstore</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>start</goal>
                </goals>
                <configuration>
                  <pgDbName>flowstore</pgDbName>
                </configuration>
              </execution>
              <execution>
                <id>filestore</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>start</goal>
                </goals>
                <configuration>
                  <pgDbName>filestore</pgDbName>
                </configuration>
              </execution>
              <execution>
                <id>phlog</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>start</goal>
                </goals>
                <configuration>
                  <pgDbName>phlog</pgDbName>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>docker-build</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.spotify</groupId>
            <artifactId>dockerfile-maven-plugin</artifactId>
            <version>1.3.4</version>
            <executions>
              <execution>
                <id>default</id>
                <goals>
                  <goal>build</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <repository>docker-io.dbc.dk/${project.artifactId}</repository>
              <buildArgs>
                <user>${user.name}</user>
              </buildArgs>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
