<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'
             xmlns:jobs='urn:import:dk.dbc.dataio.gui.client.components.jobfilter'>
    <ui:with type="dk.dbc.dataio.gui.client.resources.Resources" field="res"/>
    <ui:with type="dk.dbc.dataio.gui.client.pages.job.show.Texts" field="txt"/>

    <ui:style>
        .outerHtmlPanel {
            width: 100%;
            max-width: 125em;
            min-width: 88em;

            /*
             * min-width:
             * This value determines when the horizontal scroll bar is shown.
             * If adding new columns to the jobsTable: Make sure the value is larger than the
             * jobsTable minimum 'collapse ability'.
             */
        }

        .radio-buttons {
        }

        .innerHtmlPanel {
            width: inherit;
            min-width: inherit;
        }

        .searchJobLabel {
            width: 3.5em;
            margin-right: 0.2em;
        }

        .searchJobTextBox {
            width: 7em;
            font-family: Arial Unicode MS, Arial, sans-serif;
            font-size: small;
        }

        .searchJobButton {
            width: 2.5em;
            margin-left: 0.2em;
            font-size: 12px;
            font-weight: bold;
            text-align: center;
            color: darkslategrey;
        }

        .jobsTable {
            width: inherit;
            min-width: inherit;
            background-color: #e5e9f4;
            border-top: slategray solid 2px;
            border-bottom: slategray solid 2px;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.outerHtmlPanel}">

        <jobs:JobFilter ui:field="jobFilter" />

        <span class="{style.radio-buttons}">
            <g:RadioButton ui:field="processingFailedJobsButton" name="jobsButton" value="false" enabled="true" text="{txt.button_ProcessingFailedJobs}" />
            <g:RadioButton ui:field="deliveringFailedJobsButton" name="jobsButton" value="false" enabled="true" text="{txt.button_DeliveringFailedJobs}" />
            <g:RadioButton ui:field="allJobsButton" name="jobsButton" value="false" enabled="true" text="{txt.button_AllJobs}" />
            <g:RadioButton ui:field="fatalJobsButton" name="jobsButton" value="false" enabled="true" text="{txt.button_FatalJobs}" />
        </span>

        <g:Button ui:field="refreshButton" text="{txt.button_Refresh}" />

        <g:HTMLPanel addStyleNames="{style.innerHtmlPanel}">

            <g:HorizontalPanel width="100%">

                <g:cell horizontalAlignment="left">
                    <c:SimplePager ui:field="pagerTop" />
                </g:cell>

                <g:cell horizontalAlignment="right">
                    <g:HorizontalPanel verticalAlignment="middle" horizontalAlignment="right" width="14em">
                        <g:Label text="{txt.label_JobId}" addStyleNames="{style.searchJobLabel}"/>
                        <g:TextBox ui:field="jobIdInputField" addStyleNames="{style.searchJobTextBox}"/>
                        <g:PushButton ui:field="showJobButton" text="{txt.button_ShowJob}" addStyleNames="{style.searchJobButton}"/>
                    </g:HorizontalPanel>
                </g:cell>

            </g:HorizontalPanel>

        </g:HTMLPanel>

        <c:CellTable pageSize='20' ui:field='jobsTable' addStyleNames="{style.jobsTable}"/>
        <c:SimplePager ui:field="pagerBottom"/>

    </g:HTMLPanel>

</ui:UiBinder>