<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>dataio-job-store-service</artifactId>
    <groupId>dk.dbc</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <artifactId>dataio-job-store-service-ear</artifactId>
  <name>dataio-job-store-service-ear</name>
  <packaging>ear</packaging>

  <properties>
    <logback.staging.directory>${project.build.directory}/logback</logback.staging.directory>
    <logback.jndi.resource>${jndi.url.jobstore.logback}</logback.jndi.resource>
  </properties>

  <build>
    <resources>
      <resource>
        <directory>${logback.staging.directory}</directory>
        <filtering>true</filtering>
      </resource>
    </resources>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <version>${maven.ear.plugin.version}</version>
        <configuration>
          <version>6</version>
          <defaultLibBundleDir>lib</defaultLibBundleDir>
          <filtering>true</filtering>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>truezip-maven-plugin</artifactId>
        <version>${truezip-maven-plugin.version}</version>
        <executions>
          <execution>
            <id>extract</id>
            <goals>
              <goal>copy</goal>
            </goals>
            <phase>generate-resources</phase>
            <configuration>
              <fileset>
                <directory>${basedir}/../../commons/utils/logback/target/dataio-commons-utils-logback-${project.version}.jar</directory>
                <outputDirectory>${logback.staging.directory}</outputDirectory>
              </fileset>
            </configuration>
          </execution>
          <execution>
            <id>replace</id>
            <goals>
              <goal>copy</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <files>
                 <file>
                  <source>${project.build.directory}/classes/logback.xml</source>
                  <outputDirectory>${project.build.directory}/dataio-job-store-service-ear-${project.version}.ear/lib/dataio-commons-utils-logback-${project.version}.jar</outputDirectory>
                </file>
              </files>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <!-- Move to dev-profile -->
        <groupId>org.codehaus.cargo</groupId>
        <artifactId>cargo-maven2-plugin</artifactId>
        <version>${cargo.version}</version>
        <dependencies>
          <dependency>
            <groupId>org.glassfish.main.deployment</groupId>
            <artifactId>deployment-client</artifactId>
            <version>${glassfish.version}</version>
          </dependency>
        </dependencies>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>dk.dbc</groupId>
      <artifactId>dataio-job-store-service-war</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>dk.dbc</groupId>
      <artifactId>dataio-commons-utils-file-store-service-connector</artifactId>
      <version>${project.version}</version>
      <type>ejb</type>
    </dependency>
    <dependency>
      <groupId>dk.dbc</groupId>
      <artifactId>dataio-commons-utils-logback</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>

</project>

