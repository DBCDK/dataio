<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:with type="dk.dbc.dataio.gui.client.pages.item.show.Texts" field="txt"/>

  <ui:style>
    .workflownote {
      min-width: 55em;
      min-height: 16.5em;
      font-family: Arial Unicode MS, Arial, sans-serif;
      font-size: small;
      border: 0.5px solid lightslategray !important;
      margin: 0.5em 0.5em 0.5em;
    }
    .flowpanel {
      margin: 0.5em;
      margin-left: 0.5em;
      background: lightgray;
    }
  </ui:style>

  <g:HTMLPanel>
    <g:Button ui:field="backButton" text="{txt.label_Back}" />
    <g:FlowPanel addStyleNames="{style.flowpanel}">
      <g:TextArea ui:field="note" addStyleNames="{style.workflownote}"/>
    </g:FlowPanel>
  </g:HTMLPanel>

</ui:UiBinder>