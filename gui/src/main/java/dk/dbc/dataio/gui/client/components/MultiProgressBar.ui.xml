<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .container,
        .progressBarText,
        .firstProgressBar,
        .secondProgressBar {
            width: 100%;
            height: 100%;
        }

        .container {
            position: relative;
        }

        .firstProgressBar,
        .secondProgressBar,
        .progressBarText {
            position: absolute;
            top: 0;
            left: 0;
            min-height: 1em;
        }

        .firstProgressBar {
            z-index: 2;
            background: transparent;
        }

        .secondProgressBar {
            z-index: 1;
            background: lightgray;
        }

        .progressBarText {
            display:table;
            color: white;
            margin-left: 0.5em;
            z-index: 3;
        }

        .progressBarText > div {
            display: table-cell;
            vertical-align: middle;
            text-align: center;
        }

        progress::-webkit-progress-bar {
            background: #EEE;
            box-shadow: 0 2px 3px rgba(0,0,0,0.2) inset;
            border-radius: 3px;
        }

        progress::-webkit-progress-value {
            border-radius: 3px;
        }

        progress.firstProgressBar::-webkit-progress-value {
            background-color: green;
        }

        progress.secondProgressBar::-webkit-progress-value {
            background-color: cornflowerblue;
        }

        progress {
            background: #EEE;
            box-shadow: 0 2px 3px rgba(0,0,0,0.2) inset;
            border-radius: 3px;
        }

        progress.firstProgressBar::-moz-progress-bar {
            background-color: green;
        }

        progress.secondProgressBar::-moz-progress-bar {
            background-color: cornflowerblue;
        }

        progress::-moz-progress-bar {
            border-radius: 3px;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="{style.container}">
            <div class="{style.progressBarText}"><g:Label ui:field="textProgress"></g:Label></div>
            <progress ui:field="firstProgress" class="{style.firstProgressBar}" value="0" max="100" />
            <progress ui:field="secondProgress" class="{style.secondProgressBar}" value ="0" max="100" />
        </div>
    </g:HTMLPanel>

</ui:UiBinder>