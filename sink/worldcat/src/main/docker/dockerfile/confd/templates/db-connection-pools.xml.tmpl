<!DOCTYPE resources PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Resource Definitions//EN" "http://glassfish.org/dtds/glassfish-resources_1_5.dtd">
<resources>
    <jdbc-connection-pool datasource-classname="org.postgresql.ds.PGSimpleDataSource" name="jdbc/ocn-repo/pool">
        <property name="user" value="{{getv "/dbc/postgres/ocn/env/postgres/user"}}"></property>
        <property name="PortNumber" value="5432"></property>
        <property name="password" value="{{getv "/dbc/postgres/ocn/env/postgres/password"}}"></property>
        <property name="DriverClass" value="org.postgresql.Driver"></property>
        <property name="DatabaseName" value="{{getv "/dbc/postgres/ocn/env/postgres/db"}}"></property>
        <property name="serverName" value="{{getv "/dbc/postgres/ocn/env/postgres/host"}}"></property>
    </jdbc-connection-pool>

    <jdbc-resource pool-name="jdbc/ocn-repo/pool" jndi-name="jdbc/ocn-repo"></jdbc-resource>
</resources>
