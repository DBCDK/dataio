<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dio='urn:import:dk.dbc.dataio.gui.client.components'>

    <ui:with type="dk.dbc.dataio.gui.client.pages.sink.modify.Texts" field="txt"/>

    <g:HTMLPanel>

        <li>
            <dio:PromptedList ui:field="sinkTypeSelection" visibleItems="1" guiId="sinktypeselection" prompt="{txt.label_SinkType}" multiSelect="false" enabled="true">
                <dio:item value="ES"><g:Label><ui:text from="{txt.selection_ESSink}"/></g:Label></dio:item>
                <dio:item value="OPENUPDATE"><g:Label><ui:text from="{txt.selection_UpdateSink}"/></g:Label></dio:item>
                <dio:item value="DUMMY"><g:Label><ui:text from="{txt.selection_DummySink}"/></g:Label></dio:item>
                <dio:item value="FBS"><g:Label><ui:text from="{txt.selection_FBSWebserviceSink}"/></g:Label></dio:item>
                <dio:item value="IMS"><g:Label><ui:text from="{txt.selection_ImsSink}"/></g:Label></dio:item>
                <dio:item value="HIVE"><g:Label><ui:text from="{txt.selection_HiveSink}"/></g:Label></dio:item>
                <dio:item value="TICKLE"><g:Label><ui:text from="{txt.selection_TickleSink}"/></g:Label></dio:item>
            </dio:PromptedList>
        </li>
        <li><dio:PromptedTextBox ui:field="name" guiId="sinknamepanel" prompt="{txt.label_SinkName}"/></li>
        <li><dio:PromptedTextBox ui:field="resource" guiId="sinkresourcepanel" prompt="{txt.label_ResourceName}"/></li>
        <li><dio:PromptedTextArea ui:field="description" guiId="sinkdescriptionpanel" prompt="{txt.label_Description}" maxLength="160"/></li>
        <g:HTMLPanel ui:field="sequenceAnalysisSection" visible="false">
            <li>
                <dio:PromptedRadioButtons ui:field="sequenceAnalysisSelection" guiId="sequenceAnalysisSelection" prompt="{txt.label_SequenceAnalysis}">
                    <dio:button value="ALL"><g:Label><ui:text from="{txt.button_SequenceAnalysisOptionAll}"/></g:Label></dio:button>
                    <dio:button value="ID_ONLY"><g:Label><ui:text from="{txt.button_SequenceAnalysisOptionIdOnly}"/></g:Label></dio:button>
                </dio:PromptedRadioButtons>
            </li>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="updateSinkSection" visible="false">
            <li><dio:PromptedTextBox ui:field="url" guiId="sinkurl" prompt="{txt.label_SinkUrl}"/></li>
            <li><dio:PromptedTextBox ui:field="openupdateuserid" guiId="openupdatesinkuserid" prompt="{txt.label_UserId}"/></li>
            <li><dio:PromptedPasswordTextBox ui:field="password" guiId="sinkpassword" prompt="{txt.label_Password}"/></li>
            <li><dio:PromptedMultiList ui:field="queueProviders" guiId="sinkqueueproviders" prompt="{txt.label_QueueProviders}" manualSorting="false" /></li>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="esSinkSection" visible="false">
            <li><dio:PromptedTextBox ui:field="esUserId" guiId="essinkuserid" prompt="{txt.label_UserId}"/></li>
            <li><dio:PromptedTextBox ui:field="esDatabase" guiId="essinkdatabase" prompt="{txt.label_Database}"/></li>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="imsSinkSection" visible="false">
            <li><dio:PromptedTextBox ui:field="imsEndpoint" guiId="imssinkendpoint" prompt="{txt.label_ImsEndpoint}"/></li>
        </g:HTMLPanel>
        <li>
            <g:Button ui:field="saveButton"><ui:text from="{txt.button_Save}"/></g:Button>
            <!-- Visibility of the delete button is controlled from PresenterEditImpl -->
            <g:Button ui:field="deleteButton" visible="false" addStyleNames="deleteButton"><ui:text from="{txt.button_Delete}"/></g:Button>
        </li>
        <li><g:Label ui:field="status"></g:Label></li>

        <dio:PopupValueBox ui:field="popupTextBox" dialogTitle="{txt.label_EnterQueueProviders}" okButtonText="{txt.button_OKQueueProvider}" cancelButtonText="{txt.button_Cancel}" />
        <dio:PopupBox ui:field="confirmation" okButtonText="{txt.button_Yes}" cancelButtonText="{txt.button_Cancel}" dialogTitle="{txt.caption_DeleteSink}" />

    </g:HTMLPanel>

</ui:UiBinder>