<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dio='urn:import:dk.dbc.dataio.gui.client.components'
             xmlns:io='urn:import:dk.dbc.dataio.gui.client.pages.iotraffic'>

    <ui:with type="dk.dbc.dataio.gui.client.pages.iotraffic.Texts" field="txt"/>

    <ui:style>
        .promptText {
            float: left;
            margin-top: 1.4em;
        }
        .newParagraph {
            clear: both;
            height: 1em;
        }
        .ioTrafficContainer li > div {
            margin-right: 1em;
        }
        .addButton {
            margin-top: 1.4em;
            margin-left: 0;
        }
        ul {
            padding: 0;
        }
        ul li {
            float: left;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.ioTrafficContainer}">
        <h2><ui:text from="{txt.label_PageTitle}"/></h2>
        <ul>
            <li><g:Label addStyleNames="{style.promptText}" text="{txt.label_New}" /></li>
            <li><dio:PromptedTextBox promptStyle="stacked" ui:field="submitter" guiId="io-traffic-submitter" prompt="{txt.label_Submitter}" maxLength="160"/></li>
            <li><dio:PromptedTextBox promptStyle="stacked" ui:field="packaging" guiId="io-traffic-packaging" prompt="{txt.label_Packaging}" maxLength="160"/></li>
            <li><dio:PromptedTextBox promptStyle="stacked" ui:field="format" guiId="io-traffic-format" prompt="{txt.label_Format}" maxLength="160"/></li>
            <li><dio:PromptedTextBox promptStyle="stacked" ui:field="destination" guiId="io-traffic-destination" prompt="{txt.label_Destination}" maxLength="160"/></li>
            <li><dio:PromptedCheckBox promptStyle="stacked" ui:field="copy" guiId="io-traffic-copy" prompt="{txt.label_Copy}"/></li>
            <li><dio:PromptedCheckBox promptStyle="stacked" ui:field="notify" guiId="io-traffic-notify" prompt="{txt.label_Notify}"/></li>
            <li><dio:EnterButton ui:field="addButton" addStyleNames="{style.addButton}" text="{txt.button_Add}"></dio:EnterButton></li>
        </ul>
        <g:SimplePanel styleName="{style.newParagraph}"/>

        <io:GatekeepersTable pageSize='500' ui:field='gatekeepersTable' />

    </g:HTMLPanel>

</ui:UiBinder>