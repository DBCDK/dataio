<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dio='urn:import:dk.dbc.dataio.gui.client.components'>

    <ui:with type="dk.dbc.dataio.gui.client.pages.flowcomponent.modify.Texts" field="txt"/>

    <g:HTMLPanel>

        <li><dio:TextEntry ui:field="name" guiId="flowcomponentnamepanel" prompt="{txt.label_ComponentName}" maxLength="160" toolTip=""/></li>
        <li><dio:TextEntry ui:field="project" guiId="flowcomponentprojectpanel" prompt="{txt.label_SvnProject}" maxLength="160" toolTip=""/></li>
        <li><dio:ListEntry ui:field="revision" guiId="flowcomponentrevisionpanel" prompt="{txt.label_SvnRevision}" multiSelect="false" visibleItems="1"/></li>
        <li><dio:ListEntry ui:field="script" guiId="flowcomponentscriptnamepanel" prompt="{txt.label_ScriptName}" multiSelect="false" visibleItems="1"/></li>
        <li><dio:ListEntry ui:field="method" guiId="flowcomponentinvocationmethodpanel" prompt="{txt.label_InvocationMethod}" multiSelect="false" visibleItems="1"/></li>
        <li><g:Button ui:field="saveButton"><ui:text from="{txt.button_Save}"/></g:Button></li>
        <li><g:Label ui:field="status"></g:Label></li>
        <li><g:Label ui:field="busy"><ui:text from="{txt.status_Busy}"/></g:Label> </li>

    </g:HTMLPanel>

</ui:UiBinder>