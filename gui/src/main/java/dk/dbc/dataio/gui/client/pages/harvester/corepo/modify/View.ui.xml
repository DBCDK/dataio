<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dio='urn:import:dk.dbc.dataio.gui.client.components'>

    <ui:with type="dk.dbc.dataio.gui.client.pages.harvester.corepo.modify.Texts" field="txt"/>

    <g:HTMLPanel>

        <li><dio:PromptedTextBox ui:field="name" guiId="harvesternamepanel" prompt="{txt.prompt_Name}"/></li>
        <li><dio:PromptedTextArea ui:field="description" guiId="harvesterdescriptionpanel" prompt="{txt.prompt_Description}" maxLength="160"/></li>
        <li><dio:PromptedTextBox ui:field="resource" guiId="harvesterresourcepanel" prompt="{txt.prompt_Resource}"/></li>
        <li><dio:PromptedList ui:field="rrHarvester" guiId="harvesterrrharvesterpanel" prompt="{txt.prompt_RrHarvester}" multiSelect="false" visibleItems="1"/></li>
        <li><dio:PromptedCheckBox ui:field="enabled" guiId="enabled" prompt="{txt.prompt_Enabled}"/></li>
        <li>
            <g:Button ui:field="saveButton"><ui:text from="{txt.button_Save}"/></g:Button>
            <g:Button ui:field="deleteButton" visible="false" addStyleNames="deleteButton"><ui:text from="{txt.button_Delete}"/></g:Button>
        </li>

        <li><g:Label ui:field="status"/></li>

        <dio:PopupBox ui:field="confirmation" okButtonText="{txt.button_Yes}" cancelButtonText="{txt.button_Cancel}" dialogTitle="{txt.caption_DeleteHarvester}" />

    </g:HTMLPanel>

</ui:UiBinder>