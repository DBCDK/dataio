<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dio='urn:import:dk.dbc.dataio.gui.client.pages.item.show'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">
    <ui:with type="dk.dbc.dataio.gui.client.pages.item.show.Texts" field="txt"/>

    <ui:style>
        .horizontal-element {
            padding: 0.5em;
            text-align: left;
        }
    </ui:style>

    <g:HTMLPanel>

        <g:Button ui:field="backButton" text="{txt.label_Back}" />
        <c:SimplePager ui:field="itemsPager" />
        <g:HorizontalPanel verticalAlignment="top" horizontalAlignment="left" width="100%" >
            <g:cell>
                <c:CellTable ui:field='itemsTable' width="16em" addStyleNames="{style.horizontal-element}"/>
            </g:cell>

            <g:cell width="100%">
                <g:DecoratedTabPanel ui:field="detailedTabs" visible="false" animationEnabled="true" width="100%" addStyleNames="{style.horizontal-element}">
                    <g:Tab text="{txt.tab_ItemDiagnostic}">
                        <dio:ItemDiagnosticTabContent ui:field="itemDiagnosticTabContent"/>
                    </g:Tab>
                </g:DecoratedTabPanel>
            </g:cell>
        </g:HorizontalPanel>
        
    </g:HTMLPanel>

</ui:UiBinder>