<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dio='urn:import:dk.dbc.dataio.gui.client.components'>
    <ui:with type="dk.dbc.dataio.gui.client.pages.flow.modify.Texts" field="txt"/>

    <ui:style>
        #dio-FlowComponentSelectionDialogBox select {
            width: 100%;
        }
    </ui:style>

    <g:HTMLPanel>

        <li><dio:PromptedTextBox ui:field="name" guiId="flownamepanel" prompt="{txt.label_FlowName}" maxLength="160" toolTip=""/></li>
        <li><dio:PromptedTextArea ui:field="description" guiId="flowdescriptionpanel" prompt="{txt.label_Description}" maxLength="160"/></li>
        <li><dio:PromptedMultiList ui:field="flowComponents" guiId="flowcomponentslistpanel" prompt="{txt.label_FlowComponents}" manualSorting="true" /></li>

        <li>
            <g:Button ui:field="saveButton"><ui:text from="{txt.button_Save}"/></g:Button>
            <!-- Visibility of the delete button is controlled from PresenterEditImpl -->
            <g:Button ui:field="deleteButton" visible="false" addStyleNames="deleteButton"><ui:text from="{txt.button_Delete}"/></g:Button>
        </li>
        <li><g:Label ui:field="status"/></li>

        <dio:PopupListBox ui:field="popupListBox" guid="dio-FlowComponentSelectionDialogBox" multipleSelect="false" okButtonText="{txt.button_Select}" dialogTitle="{txt.caption_SelectFlowComponent}" cancelButtonText="{txt.button_Cancel}" extraButtonText="{txt.button_NewFlowComponent}"/>

    </g:HTMLPanel>

</ui:UiBinder>