  <build>
    <plugins>
      <plugin>
        <artifactId>exec-maven-plugin</artifactId>
        <groupId>org.codehaus.mojo</groupId>
        <executions>
          <execution>
            <id>build-docker-image</id>
            <configuration>
              <arguments combine.children="append">
                <argument>dbc-payara-jobstore</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-failsafe-plugin</artifactId>
        <version>${maven-failsafe-plugin.version}</version>
        <executions>
          <execution>
            <goals>
              <goal>integration-test</goal>
              <goal>verify</goal>
            </goals>
            <id>integration-test</id>
          </execution>
        </executions>
        <configuration>
          <!--
            this is hopefully a temporary workaround to handle the situation
            where arquillian tries to connect to the admin interface of payara,
            which needs to be connected to via https because it is remote when
            running in a docker container. if the certificate of the application
            server isn't known to the java process an SSLHandshakeException
            occurs with the message "PKIX path building failed".
          -->
          <argLine>
            -Djavax.net.ssl.trustStore=${project.basedir}/../../keystore.jks
          </argLine>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>${maven.war.plugin.version}</version>
        <configuration>
          <failOnMissingWebXml>false</failOnMissingWebXml>
          <attachClasses>true</attachClasses>
          <webResources>
            <resource>
              <directory>${basedir}/src/main/webapp/WEB-INF</directory>
              <filtering>true</filtering>
              <targetPath>WEB-INF</targetPath>
            </resource>
          </webResources>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>reserve-network-port</id>
            <goals>
              <goal>reserve-network-port</goal>
            </goals>
            <phase>initialize</phase>
            <configuration>
              <portNames>
                <portName>jobstore.it.postgresql.port</portName>
              </portNames>
            </configuration>
          </execution>
        </executions>
      </plugin>


      <plugin>
        <groupId>dk.dbc</groupId>
        <artifactId>postgresql-maven-plugin</artifactId>
        <version>1.3-SNAPSHOT</version>
        <executions>
          <execution>
            <id>start-postgresql</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>start</goal>
            </goals>
            <configuration>
              <pgPort>${jobstore.it.postgresql.port}</pgPort>
              <pgDbName>${jobstore.it.postgresql.dbname}</pgDbName>
              <pgDbScripts>
              </pgDbScripts>
            </configuration>
          </execution>
          <execution>
            <id>stop-postgresql</id>
            <phase>post-integration-test</phase>
            <goals>
              <goal>shutdown</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-failsafe-plugin</artifactId>
        <configuration>
          <redirectTestOutputToFile>true</redirectTestOutputToFile>
          <systemPropertyVariables>
            <postgresql.port>${jobstore.it.postgresql.port}</postgresql.port>
            <postgresql.dbname>${jobstore.it.postgresql.dbname}</postgresql.dbname>
            <persistence.unit.name>${jobstore.it.persistence.unit.name}</persistence.unit.name>
            <container.admin.port>${container.admin.port}</container.admin.port>
            <container.http.port>${container.http.port}</container.http.port>
            <container.suffix>${container.suffix}</container.suffix>
          </systemPropertyVariables>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>integration-test</goal>
              <goal>verify</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
