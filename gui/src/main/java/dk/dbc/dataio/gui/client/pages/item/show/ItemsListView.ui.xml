<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:style>
        .horizontal-element {
            padding: 0.5em;
            text-align: left;
        }
    </ui:style>

    <g:HTMLPanel>

        <g:HorizontalPanel verticalAlignment="top" horizontalAlignment="left" width="100%" >
            <g:cell>
                <c:CellTable ui:field='itemsTable' width="16em" addStyleNames="{style.horizontal-element}"/>
            </g:cell>

            <g:cell width="100%">
                <g:DecoratedTabPanel ui:field="detailedTabs" visible="false" animationEnabled="true" width="100%" addStyleNames="{style.horizontal-element}" />
            </g:cell>
        </g:HorizontalPanel>

        <c:SimplePager ui:field="itemsPager" />

    </g:HTMLPanel>

</ui:UiBinder>