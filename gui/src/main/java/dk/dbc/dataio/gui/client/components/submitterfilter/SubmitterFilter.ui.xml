
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with type="dk.dbc.dataio.gui.client.components.submitterfilter.Texts" field="txt"/>
    <ui:style>
        .menuBar {
            display: inline-block;
            margin-right: 6px;
        }
        .submitterFilterList {
            display: inline-block;
        }
    </ui:style>
    <g:HTMLPanel>

        <g:MenuBar addStyleNames="{style.menuBar}">
            <g:MenuItem>
                <ui:text from="{txt.text_AddFilter}" />
                <g:MenuBar ui:field="filterMenu" vertical="true" />
            </g:MenuItem>
        </g:MenuBar>

        <g:FlowPanel ui:field="submitterFilterContainer" addStyleNames="{style.submitterFilterList} filter-list"/>

    </g:HTMLPanel>
</ui:UiBinder>
